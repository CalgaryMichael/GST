
@{
    ViewBag.Title = "BadgeHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section additionalCSS
{

}

<h2>BadgeHistory</h2>

<div class="container">
    <div class="box">
        <div class="container-1">
            <span class="icon" onclick="window.HomeModule.getGiver($('#txtSearch').val())"><i class="fa fa-search"></i></span>
            <input type="search" id="txtSearch" placeholder="Search..." />
        </div>
        <div id="spinner">
            <i class="fa fa-spinner fa-spin fa-2x fa-fw"></i>
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div id="results"></div>
</div>

@section scriptsIncludes
{
    <script src="~/content/Modules/BadgeHistoryModule.js?Build=@Guid.NewGuid().ToString()"></script>
}

@section inlineScript
{
    <script type="text/javascript">
        $(document).ready(function () {
            window.HomeModule.init($('#txtSearch').val());
        });
    </script>
}