@model List<GST_Program.Domain.Models.Badge>
@{  Layout = "~/Views/Shared/_AdminLayout.cshtml";}
<div class="table-responsive">
    <table class="table table-condensed">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th></th>
        </tr>
        @foreach (var b in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelb => b.Badge_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelb => b.Badge_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelb => b.Badge_Give_Type)
                </td>
                <td>
                    @Html.ActionLink("Details", "BadgeDetail", new { id = b.Badge_ID }) |
                    @Html.ActionLink("Edit", "BadgeEdit", new {id = b.Badge_ID }) |
                    @Html.ActionLink("Delete", "BadgeDelete", new {id = b.Badge_ID })
                </td>
            </tr>
        }
    </table>
</div>